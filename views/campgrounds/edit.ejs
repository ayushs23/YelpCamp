    <% include ../partials/header %>


       <div class="row">
        <h1 style="text-align:center">Edit <%= campground.name%></h1>
       <div style="width:30%; margin:30px auto;">
           <form  action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group"><label for="name">Campground's Name</label><input class="form-control" type="text" name="name" value="<%= campground.name%>"></div>
        <div class="form-group"> <label for="price">Campground's Cost</label><input class="form-control" type="number" name="price" value="<%= campground.price %>" min="0.10" step="0.1"></div>
        <div class="form-group">
        <label for="image">Image</label>
        <input type="file" id="image" name="image" class="form-control-file btn btn-info" accept="image/*" >
        </div>
        <div class="form-group"> <label for="description">Description</label> <textarea class="form-control" name="description" id="description" rows=" 5"><%= campground.description %></textarea></div>
    <div class="form-group">
        <button style="width:50%;" class="btn btn-primary">Submit</button>
        <a style="width:48%;"class="btn btn-primary" href="/campgrounds">Go Back</a>
        </div>
    </form>
    </div>
    </div>

    <% include ../partials/footer %>